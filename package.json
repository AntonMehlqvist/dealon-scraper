{
  "name": "multi-site",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && fix-tsc-es-imports -y -V",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "cli": "node dist/cli.js",
    "start-all": "npm run build && RUN_MODE=full node dist/orchestrator.js --category all",
    "start-electronics": "npm run build && RUN_MODE=full node dist/orchestrator.js --category electronics",
    "start-pharmacy": "npm run build && RUN_MODE=full node dist/orchestrator.js --category pharmacy",
    "prod": "npm run build && npm start",
    "help": "npm run build && npm run cli -- --help",
    "migrate": "node dist/migrate.js",
    "lint": "eslint . --ext .ts,.js || true",
    "health": "curl -f http://localhost:3210/healthz || exit 1",
    "worker": "node dist/worker.js",
    "scheduler": "node dist/scheduler.js",
    "deploy:prod": "pnpm install && pnpm build && pm2 reload ecosystem.config.cjs --env prod"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "bullmq": "^5.62.2",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "p-limit": "^4.0.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "playwright": "^1.46.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^10.0.0",
    "fix-tsc-es-imports": "^0.1.6",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.5.0"
  }
}